<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>{% block title %}{% endblock %} &mdash; Acme\Hello</title>
    <meta name="description" content="{% block description %}{% endblock %}">
    <meta name="author" content="{% block author %}{% endblock %}">

    <meta name="viewport" content="width=device-width,initial-scale=1">

    {% stylesheets 'public/app/css/style.css' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
    {% block stylesheets %}{% endblock %}

    {% javascripts 'public/app/js/libs/modernizr-2.0.6.min.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
</head>
<body>

<div id="container">
    {% block container %}
        <header>
            {% block header %}{% endblock %}
        </header>
        <div id="main" role="main">
            {% block main %}{% endblock %}
        </div>
        <footer>
            {% block footer %}{% endblock %}
        </footer>
    {% endblock container %}
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script>window.jQuery || document.write('
    {%- javascripts 'public/app/js/libs/jquery-1.7.1.min.js' -%}
        <script src="{{ asset_url }}"><\/script>
    {%- endjavascripts -%}
')</script>

{% javascripts
    'public/app/js/plugins.js'
    'public/app/js/script.js'
%}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% block javascripts %}{% endblock %}

